<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.witkey.campuswitkey.views.MainActivity">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/find_tasks_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_find_tasks_selected"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="问题大厅"
            android:textColor="@color/holo_bule_dark" />

        <TextView
            android:id="@+id/find_witkeys_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_find_witkeys_unselected"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="发现"
            android:textColor="@color/darker_gray" />

        <TextView
            android:id="@+id/post_tasks_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_post_tasks_unselected"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="发布问题"
            android:textColor="@color/darker_gray" />

        <TextView
            android:id="@+id/personal_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="5dp"
            android:drawableTop="@drawable/ic_personal_unselected"
            android:textColor="@color/darker_gray"
            android:text="我的"/>


    </LinearLayout>



</LinearLayout>
